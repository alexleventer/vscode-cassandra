{
    "extends": "tslint:recommended",
    "linterOptions": {
        "exclude": [
            "src/antlr/*"
        ]
    },
    "rules": {
        "directive-selector": [
            false,
            "attribute",
            "foo",
            "camelCase"
        ],
        "component-selector": [
            false,
            "element",
            "foo",
            "kebab-case"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "no-console": [
            false,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-inferrable-types": [
            false,
            "ignore-params"
        ],
        "unified-signatures":false,
        "no-input-rename": false,
        "import-spacing": false,
        "no-output-on-prefix": false,
        "no-output-rename": false,
        "object-literal-sort-keys": false,
        "max-line-length": [
            true,
            140
        ],
        "interface-name": false,
        "angular-whitespace": [
            false
        ],
        "no-consecutive-blank-lines": true,
        "member-access": false,
        "variable-name": false,
        "semicolon": [
            true,
            "always"
        ],
        "no-empty": false,
        "prefer-for-of":false
    }
}
