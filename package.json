{
    "name": "vscode-cassandra",
    "displayName": "vscode-cassandra",
    "description": "Cassandra database workbench for Visual studio Code",
    "version": "0.0.1",
    "publisher": "kdcro101",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.cassandraWorkbench.jsonc",
        "onCommand:generate-configuration"
    ],
    "main": "./out/extension",
    "contributes": {
        "menus": {
            "view/title": [
                {
                    "when": "view == cassandraWorkbenchView",
                    "command": "cassandraWorkbench.refresh",
                    "group": "navigation"
                },
                {
                    "when": "view == cassandraWorkbenchView",
                    "command": "cassandraWorkbench.editConfiguration",
                    "group": "navigation"
                },
                {
                    "when": "view == cassandraWorkbenchView",
                    "command": "cassandraWorkbench.revealPanel",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "cassandraWorkbench.tableSelectStatement",
                    "when": "view == cassandraWorkbenchView && viewItem == table",
                    "group": "navigation@1"
                }
            ]
        },
        "commands": [
            {
                "command": "cassandraWorkbench.generateConfiguration",
                "title": "CASSANDRA WORKBENCH: Generate configuration template"
            },
            {
                "command": "cassandraWorkbench.tableSelectStatement",
                "title": "SELECT query"
            },
            {
                "command": "cassandraWorkbench.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "./icons/refresh/light.svg",
                    "dark": "./icons/refresh/dark.svg"
                }
            },
            {
                "command": "cassandraWorkbench.editConfiguration",
                "title": "Edit configuration",
                "icon": {
                    "light": "./icons/settings/light.svg",
                    "dark": "./icons/settings/dark.svg"
                }
            },
            {
                "command": "cassandraWorkbench.revealPanel",
                "title": "Show CQL editor",
                "icon": {
                    "light": "./icons/cql/light.svg",
                    "dark": "./icons/cql/dark.svg"
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "object-explorer",
                    "title": "Casssandra workbench",
                    "icon": "icons/activity.svg"
                }
            ]
        },
        "views": {
            "object-explorer": [
                {
                    "id": "cassandraWorkbenchView",
                    "name": "Explorer"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "generate": "./script/generate-parser.sh"
    },
    "devDependencies": {
        "@types/cassandra-driver": "^3.4.0",
        "@types/fs-extra": "^5.0.4",
        "@types/lodash": "^4.14.111",
        "@types/mocha": "^2.2.42",
        "@types/node": "^10.5.2",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.6",
        "@types/jasmine": "^2.8.8",
        "babel-core": "^6.26.3",
        "babel-preset-env": "^1.7.0",
        "babelify": "^8.0.0",
        "derequire": "^2.0.6",
        "gulp": "^3.9.1",
        "gulp-clean": "^0.4.0",
        "gulp-exec": "^3.0.1",
        "gulp-jasmine": "^4.0.0",
        "gulp-typescript": "^5.0.0-alpha.1",
        "jasmine": "^3.1.0",
        "jasmine-ts": "^0.2.1",
        "merge2": "^1.2.2",
        "rimraf": "^2.6.2",
        "run-sequence": "^2.2.1"
    },
    "dependencies": {
        "antlr4ts": "^0.4.1-alpha.0",
        "antlr4ts-cli": "^0.4.0-alpha.4",
        "cassandra-driver": "^3.5.0",
        "fs-extra": "^6.0.1",
        "jsmin": "^1.0.1",
        "lodash": "^4.17.10",
        "monaco-editor": "^0.14.3",
        "rxjs": "^6.2.1",
        "url-parse": "^1.4.3"
    }
}
